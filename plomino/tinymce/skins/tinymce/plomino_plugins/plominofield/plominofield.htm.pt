<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns:tal="http://xml.zope.org/namespaces/tal" id="region-content" xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" i18n:domain="tinymce">
<head>
	<meta http-equiv="Content-type" content="text/html;charset=UTF-8" /> 
	<title>Add/edit a Plomino Field</title>
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="../../utils/mctabs.js"></script>
	<script type="text/javascript" src="../../utils/form_utils.js"></script>
	<script type="text/javascript" src="js/plominofield.js"></script>
	<link rel="stylesheet" type="text/css" href="css/plominofield.css">
</head>
<body tal:define="parentpath here/REQUEST/parent|nothing;
                  form python:here.restrictedTraverse('/'.join(parentpath.split('/')[0:-1]));
                  selectedfield here/REQUEST/selectedfield|nothing;
                  field python:(selectedfield in (field.id for field in form.getFields())) and getattr(form, selectedfield) or form.getFields()[0];
                  adapted field/tinyfield;">
	<div class="dialog-wrapper">
		<fieldset id="general_panel">
			<legend>Add/edit a Plomino Field</legend>
			
				
			<!--<p>
				<label for="plominoFieldId_text">Add</label><br />
				<input type="text" name="plominoFieldId_text" id="plominoFieldId_text" tal:attributes="value selectedfield" />
			</p>-->
			
			<label for="plominoFieldId_select">Field ID</label><br />
			<select id="plominoFieldId_select" name="selectedfield">
				<option
					tal:repeat="item python:form.getFields()"
					tal:content="item/id"
					tal:attributes="value item/id; selected python:item.id==field.id">a</option>
			</select>
			
			<!--<fieldset class="column">
				<legend>Edit a field: <span tal:content="field/id"></span></legend>
				
				<br />
				
				<label for="fieldTypesList">Field type</label>
				<select id="fieldTypesList" name="fieldsList">
					<option tal:repeat="type adapted/getFieldTypes"
							tal:content="python:type[1]"
							tal:attributes="value python:type[0]; selected python:field.FieldType==type[0]"></option>
				</select>
				<br />
				
			</fieldset>-->
		</fieldset>
		
		<div class="mceActionPanel formControls">
			<form onsubmit="PlominoFieldDialog.submit(); return false;" action="#">
				<span class="actionButtons">
					<input type="submit" id="insert" class="context" name="insert" i18n:attributes="value common_insert" />
					<input type="button" id="cancel" class="standalone" name="cancel" i18n:attributes="value common_cancel" onclick="tinyMCEPopup.close();" />
				</span>
		    </form>
		</div>
	</div>
	
</body>
</html>